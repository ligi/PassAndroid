<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="@android:color/white">

    <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:animateLayoutChanges="true"
            android:orientation="vertical">


        <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/nav_topic"
                    android:text="@string/nav_main_sort"/>

            <RadioButton
                    android:id="@+id/categoryRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/nav_main_sort_category"/>

            <RadioButton
                    android:id="@+id/dateRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_main_sort_date"/>
        </RadioGroup>

        <TextView
                android:id="@+id/navCategoriesOuter"
                style="@style/nav_topic"
                android:text="@string/nav_main_categories"/>

        <LinearLayout
                android:id="@+id/navCategoriesInner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        <TextView
                style="@style/nav_topic"
                android:text="@string/nav_main_more"/>


        <TextView
                android:id="@+id/community"
                style="@style/nav_text"
                android:background="@drawable/clickable_bg"
                android:drawableLeft="@drawable/ic_action_gplus"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/nav_main_community"/>


        <TextView
                android:id="@+id/share"
                style="@style/nav_text"
                android:background="@drawable/clickable_bg"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_nav_share"
                android:text="@string/action_share"/>


    </LinearLayout>
</ScrollView>