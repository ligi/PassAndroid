<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="color">@color/secondary</item>
        <item name="actionModeBackground">@color/secondary</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="seperator_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:background">@color/dividing_color</item>
    </style>

    <style name="nav_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/clickable_bg</item>
    </style>

    <style name="nav_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="nav_icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="nav_topic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
        <item name="android:padding">7dp</item>
    </style>
</resources>